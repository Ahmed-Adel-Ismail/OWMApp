<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/view_favorite_city_label_text_view"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="5"
            android:gravity="center|start"
            android:paddingEnd="2dp"
            android:paddingStart="2dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/view_favorite_city_remove_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2.5"
            android:text="@string/view_favorite_city_remove"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/view_favorite_city_show_forecast_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2.5"
            android:text="@string/view_favorite_city_forecast"
            android:textSize="12sp"/>
    </LinearLayout>
</android.support.v7.widget.CardView>